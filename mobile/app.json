{
  "expo": {
    "name": "VoiceChat",
    "slug": "voice-chat",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "scheme": "voicechat",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.takashimats.voicechat",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "音声通話のためにマイクを使用します",
        "NSSpeechRecognitionUsageDescription": "音声を文字に変換するために使用します",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.voicechat.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router"
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "e31a0936-4b09-4b42-b510-e615c68442d0"
      }
    }
  }
}
